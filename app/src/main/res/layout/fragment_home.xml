<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo"
                    android:tint="#2E7D32"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Profile" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matoliul Huda App"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/doa"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/dotsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pemberitahuan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/gray"
                android:scaleType="centerCrop"
                android:src="@drawable/doa"
                android:layout_marginBottom="20dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:rowCount="2"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/menuBerita"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/bg_round"
                        android:backgroundTint="#77805c"
                        android:scaleType="centerCrop"
                        android:padding="12dp"
                        android:src="@drawable/berita"
                        android:clipToOutline="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berita"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menuGallery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/bg_round"
                        android:backgroundTint="#1941e5"
                        android:scaleType="centerCrop"
                        android:padding="12dp"
                        android:src="@drawable/galeri"
                        android:clipToOutline="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menuPengurus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/bg_round"
                        android:backgroundTint="#92c112"
                        android:scaleType="centerCrop"
                        android:padding="12dp"
                        android:src="@drawable/pengurus"
                        android:clipToOutline="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengurus"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menuInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/bg_round"
                        android:backgroundTint="#7ea11e"
                        android:scaleType="centerCrop"
                        android:padding="12dp"
                        android:src="@drawable/masukkan"
                        android:clipToOutline="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masukkan"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menuContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/bg_round"
                        android:backgroundTint="#dd2528"
                        android:scaleType="centerCrop"
                        android:padding="12dp"
                        android:src="@drawable/hubungikami"
                        android:clipToOutline="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hubungi Kami"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menuLogout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/bg_round"
                        android:backgroundTint="#208fea"
                        android:scaleType="centerCrop"
                        android:padding="12dp"
                        android:src="@drawable/logout"
                        android:clipToOutline="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log out"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>